NODE_ENV=test
LISTEN_HOST=localhost
LISTEN_PORT=18083
LOG_LEVEL=warn

###### Database
DATABASE_URL=postgresql://media_user:media_password@localhost:15432/media_storage_test

###### S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=test
S3_SECRET_ACCESS_KEY=test
S3_BUCKET=media-files
S3_FORCE_PATH_STYLE=true

###### File Upload Limits
MAX_FILE_SIZE_MB=100
BLOCK_EXECUTABLE_UPLOADS=true
BLOCK_ARCHIVE_UPLOADS=true

###### Optimization
IMAGE_OPTIMIZATION_ENABLED=false
HEAVY_TASKS_MAX_CONCURRENCY=1
HEAVY_TASKS_QUEUE_TIMEOUT_MS=5000

###### Cleanup Job
CLEANUP_ENABLED=false
CLEANUP_CRON=0 */6 * * *
CLEANUP_BAD_STATUS_TTL_DAYS=7
CLEANUP_BATCH_SIZE=200
