{
  "name": "media-storage-microservice",
  "version": "1.0.0",
  "description": "Media storage microservice with S3, PostgreSQL, and image optimization",
  "type": "module",
  "main": "dist/src/main.js",
  "scripts": {
    "setup:dev": "bash scripts/setup-dev.sh",
    "postinstall": "dotenv -e .env.development.example -- prisma generate",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:debug": "dotenv -e .env.development -- nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma": "pnpm exec prisma",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:migrate:deploy": "dotenv -e .env.development -- prisma migrate deploy",
    "prisma:studio": "dotenv -e .env.development -- prisma studio",
    "test": "dotenv -e .env.test -- NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "dotenv -e .env.test -- NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects unit",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:cov": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:debug": "node --inspect-brk --loader ts-node/esm node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:unit:debug": "node --inspect-brk --loader ts-node/esm node_modules/.bin/jest --runInBand --selectProjects unit --detectOpenHandles",
    "test:e2e:debug": "node --inspect-brk --loader ts-node/esm node_modules/.bin/jest --runInBand --selectProjects e2e --detectOpenHandles",
    "test:e2e": "dotenv -e .env.test -- NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects e2e"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.969.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^9.0.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "@prisma/client": "^7.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cron": "^4.3.5",
    "fastify": "^5.7.0",
    "nestjs-pino": "^4.5.0",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "prisma": "^7.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@nestjs/cli": "^11.0.15",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.8",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "author": "Ivan K",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "overrides": {
      "fastify": "5.7.0",
      "cron": "4.3.5"
    }
  }
}